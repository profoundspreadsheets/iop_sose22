<grammar xmlns="http://relaxng.org/ns/structure/1.0">
<start>
    <ref name="Teams"/>
</start>

<define name="Teams">
    <element name="Teams">
        <oneOrMore>
            <ref name="Team"/>
        </oneOrMore>
    </element>
</define>

<define name="Team">
    <element name="Team">
        <attribute name="teamid"/>
        <attribute name="employees"/>
        <element name="Units">
            <oneOrMore>
                <element name="Unit">
                    <attribute name="unitid"/>
                    <attribute name="registration"/>
                    <optional>
                        <ref name="plane"/>
                    </optional>
                    <element name="seatconfig">
                        <oneOrMore>
                            <ref name="seat"/>
                        </oneOrMore>
                        <element name="brand">
                            <text/>
                        </element>
                    </element>
                </element>
            </oneOrMore>
        </element>
    </element>
</define>

<define name="plane">
    <element name="Wingtips">
        <text/>
    </element>
    <element name="Windows">
        <text/>
    </element>
</define>

<define name="seat">
    <interleave>
        <element name="seat">
            <attribute name="compartment"/>
            <attribute name="cover"/>
            <element name="amount">
                <text/>
            </element>
            <element name="tv">
                <text/>
            </element>
        </element>
    </interleave>
</define>

</grammar>